

QUERY, CREATE, DROP and EDIT TABLESPACE
----------------------------------------

SELECT tablespace_name, file_name, bytes / 1024/ 1024 MB FROM dba_data_files;
SELECT tablespace_name, bytes / 1024 / 1024 MB FROM dba_free_space WHERE tablespace_name = 'TBS4';    


CREATE TABLESPACE tbs3
    DATAFILE 'path_to_datafile/tbs3_data.dbf'
    SIZE 5m;

CREATE TABLESPACE tbs4
    DATAFILE 'path_to_datafile/tbs4_data.dbf'
    SIZE 5m
    AUTOEXTEND 20m;
    
CREATE TABLE t3(c1 INT PRIMARY KEY) TABLESPACE tbs3;
CREATE TABLE t4(c1 INT PRIMARY KEY,c2 INT NOT NULL,FOREIGN KEY(c2) REFERENCES t3(c1)) TABLESPACE tbs4;


DROP TABLESPACE tbs3  // if only try with this line will show error.
INCLUDING CONTENTS AND DATAFILES
CASCADE CONSTRAINTS;


ALTER DATABASE 
    DATAFILE 'path_to_datafile/tbs4_data.dbf' 
    RESIZE 25m;



--------------------------
CREATING TABLESPACE GROUP
-------------------------
CREATE TEMPORARY TABLESPACE tablespace_name 
    TEMPFILE 'path_to_file'
    SIZE 50M
    TABLESPACE GROUP group_name;
